<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/row_margin"
    android:layout_marginBottom="2sp"
    android:layout_marginEnd="@dimen/row_margin"
    android:layout_marginTop="2sp"
    card_view:cardBackgroundColor="?attr/colorControlNormal"
    card_view:cardCornerRadius="8sp"
    card_view:contentPadding="4sp"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/wkt_image"
            android:layout_width="@dimen/wkt_image"
            android:layout_height="@dimen/wkt_image"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_workouts"
            tools:ignore="ContentDescription"/>

        <TextView
            android:id="@+id/wkt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginStart="8sp"
            android:layout_toEndOf="@+id/wkt_image"
            android:text="@string/undefined"
            android:textSize="@dimen/wkt_title"/>

        <TextView
            android:id="@+id/wkt_count"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/wkt_image"
            android:text="@string/exs_count"
            android:textSize="@dimen/wkt_text"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>