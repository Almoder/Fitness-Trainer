<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/appThemePrimary</item>
        <item name="colorPrimaryDark">@color/appThemePrimaryDark</item>
        <item name="colorPrimarySurface">@color/appThemePrimarySurface</item>
        <item name="colorAccent">@color/appThemeAccent</item>
        <item name="colorControlActivated">@color/appThemeControlActivated</item>
        <item name="colorControlNormal">@color/appThemeColorControlNormal</item>
        <item name="android:textColor">@color/appThemeTextColor</item>
        <item name="android:textColorPrimary">@color/appThemeTextColorPrimary</item>
        <item name="android:editTextColor">@color/appThemeColorBackground</item>
        <item name="android:colorBackground">@color/appThemeTabTextColor</item>
        <item name="android:constantSize">@dimen/constant_size</item>
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:keyTextSize">@dimen/default_key_text</item>
        <item name="android:labelTextSize">@dimen/default_label_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.DefaultText">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:keyTextSize">@dimen/default_key_text</item>
        <item name="android:labelTextSize">@dimen/default_label_text</item>
    </style>
    <style name="AppTheme.SmallText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:keyTextSize">@dimen/small_key_text</item>
        <item name="android:labelTextSize">@dimen/small_label_text</item>
    </style>

    <style name="AppTheme.LargeText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:keyTextSize">@dimen/large_key_text</item>
        <item name="android:labelTextSize">@dimen/large_label_text</item>
    </style>
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/darkThemePrimary</item>
        <item name="colorPrimaryDark">@color/darkThemePrimaryDark</item>
        <item name="colorPrimarySurface">@color/darkThemePrimarySurface</item>
        <item name="colorAccent">@color/darkThemeAccent</item>
        <item name="colorControlActivated">@color/darkThemeControlActivated</item>
        <item name="colorControlNormal">@color/darkThemeColorControlNormal</item>
        <item name="android:textColor">@color/darkThemeTextColor</item>
        <item name="android:textColorPrimary">@color/darkThemeTextColorPrimary</item>
        <item name="android:editTextColor">@color/darkThemeTextColor</item>
        <item name="android:colorBackground">@color/darkThemeColorBackground</item>
        <item name="android:constantSize">@dimen/constant_size</item>
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:keyTextSize">@dimen/default_key_text</item>
        <item name="android:labelTextSize">@dimen/default_label_text</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="DarkTheme.DefaultText">
        <item name="android:textSize">@dimen/default_text</item>
        <item name="android:keyTextSize">@dimen/default_key_text</item>
        <item name="android:labelTextSize">@dimen/default_label_text</item>
    </style>
    <style name="DarkTheme.SmallText">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:keyTextSize">@dimen/small_key_text</item>
        <item name="android:labelTextSize">@dimen/small_label_text</item>
    </style>
    <style name="DarkTheme.LargeText">
        <item name="android:textSize">@dimen/large_text</item>
        <item name="android:keyTextSize">@dimen/large_key_text</item>
        <item name="android:labelTextSize">@dimen/large_label_text</item>
    </style>
    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>